- content = capture do
  .site-content-container
    .site-detail
      %h2= @notice.title
      .info
        %span.date
          = static_day_f(@notice.created_at)
        %span.view
          조회
          = @notice.reads_count
      .body.js-fit-vids
        %p!= @notice.body
      .btns
        .btns-left
          = render 'likes/button', likable: @notice
          %a.btn.btn-meta.btn-meta-detail.facebook{href: "https://www.facebook.com/sharer/sharer.php?u=#{polymorphic_url(@notice)}", target: '_blank', title: '공유하기'}
            %i.fa.fa-share-alt
            %span.d-none.d-sm-inline 공유하기
          %a.btn.btn-meta.btn-meta-detail.js-clipboard{'data-clipboard-text': polymorphic_url(@notice)}
            %i.fa.fa-link
            %span.d-none.d-sm-inline 주소복사
          - manage_menus = capture do
            - if policy(@notice).edit?
              %li= link_to '수정', [:edit, @notice], class: 'dropdown-item'
            - if policy(@notice).destroy?
              %li= link_to '삭제', @notice, method: :delete, class: 'dropdown-item', 'data-confirm': '정말 삭제하시겠습니까?'
          - if manage_menus.present?
            .dropdown.btn.btn-meta.btn-meta-detail
              %a(data-toggle="dropdown")
                더 보기
                %i.fa.fa-angle-down
              %ul.dropdown-menu.dropdown-menu-right
                = manage_menus
        .btns-right
          %a.list{href: notices_path(page: params[:page])}
            목록
            %i.fa.fa-angle-right
      .comments
        .comment-header
          댓글
        = form_with url: [@notice, @notice.comments.build], class: 'comment-form' do |f|
          .form-group
            = f.text_area :body
          .form-group
            = link_to '취소', '#'
            = f.submit '등록'
        .comments-list
          .comment
            .comment-meta
              .user 레셈
              .created-at 2019.04.20
              .likes
                %i.fa.fa-heart-o
                30
            .comment-body
              xxx
            .comment-control
              = link_to '수정', '#', class: 'btn btn-outline-default'
              = link_to '삭제', '#', class: 'btn btn-outline-default'

= render 'layouts/story', content: content

